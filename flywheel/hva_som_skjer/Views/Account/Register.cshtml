@model RegisterViewModel 

@{
    ViewData["Title"] = "Registrer";
}


<div class="register-photo" style="background-color:rgb(32,55,74);">
    <div class="form-container">
        <div class="image-holder" style="background-image:url(&quot;/images/background-camera-device-877694.jpg&quot;);"></div>
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h2 class="text-center">
                <strong>Oprett</strong> en kontro.</h2>
            <div class="form-group">
                <input class="form-control" type="email" placeholder="E-post" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Passord" asp-for="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" placeholder="Gjenta passord" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox">Jeg aksepterer brukervilkårene.</label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </div>
            <a class="already" asp-controller="Account" asp-action="Login">Har du allerede en konto? Logg inn her.</a>
        </form>
    </div>
</div>

@section Scripts { @await Html.PartialAsync("_ValidationScriptsPartial") }