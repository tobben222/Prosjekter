@using Microsoft.AspNetCore.Identity
@using hva_som_skjer.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="navbar-text" role="presentation">
                <a style="color:#1051a2;" asp-area="" asp-controller="Home" asp-action="Profile"><i class="fa fa-user" aria-hidden="true"></i> Profil</a>
            </li>
            <li>
                <button style="color:#1051a2;" type="submit" class="btn btn-link navbar-btn navbar-link"><i class="fa fa-sign-out"></i> Logg ut</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="navbar-text" role="presentation">
            <a class="nav-link" style="color:#1051a2;" asp-controller="Account" asp-action="Register"><i class="fa fa-user-plus" aria-hidden="true"></i> Registrer</a>
        </li>
        <span class="navbar-text actions"> 
            <a class="btn btn-light action-button" role="button" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in" aria-hidden="true"></i> Logg inn</a>
        </span>
    </ul>
}

